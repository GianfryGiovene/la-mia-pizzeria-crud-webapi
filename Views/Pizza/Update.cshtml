@model Helper


<div class="container">

    <h2 class="text-center">Crea la nuova pizza</h2>

    <form asp-controller="Pizza" asp-action="Update" asp-route-id="@Model.Pizza.Id" method="post">
        @Html.AntiForgeryToken()

        @******* INPUT NAME ********@
        <div class="mb-3">
            <label for="name">Nome: </label>
            <input id="name" asp-for="Pizza.Name" class="d-block w-100" />            
            <span asp-validation-for="Pizza.Name" class="text-danger"></span>
        </div>      
        
        @******* INPUT PRICE ********@
        <div class="mb-3">
            <label for="price">Prezzo: </label>
            <input id="price" asp-for="Pizza.Price" class="d-block w-100" />    
            <span asp-validation-for="Pizza.Price" class="text-danger"></span>
        </div>

        @******* INPUT DESCRIPTION ********@
        <div class="mb-3">
            <label for="description">Descrizione: </label>
            <textarea id="description" asp-for="Pizza.Description" class="d-block w-100" ></textarea>  
            <span asp-validation-for="Pizza.Description" class="text-danger"></span>
        </div>

        @******* INPUT URL PHOTO ********@
        <div class="mb-3">
            <label for="urlphoto">Url foto: </label>
            <input id="urlphoto" type="url" asp-for="Pizza.PhotoUrl" class="d-block w-100" />      
            <span asp-validation-for="Pizza.PhotoUrl" class="text-danger"></span>
        </div>

        @******* INPUT CATEGORY ********@
        <div class="mb-3">
            <label for="Category">Categoria: </label>
            <select asp-for="Pizza.CategoryId">    
                <option value=""></option>
                @foreach(Categoria category in Model.CategoryList)
                {
                    @if(Model.Pizza.CategoryId == category.Id)
                    {
                        <option value="@category.Id" selected>@category.Name</option>
                    }
                    else
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
        </div>

        @******* INPUT INGREDIENTI ********@
        <div class="mb-3">
            <strong>Ingredienti:</strong>
            <select asp-for="SelectedIngredienti" 
                    asp-items="@Model.IngredientiList" 
                    multiple 
                    class="form-control mb-2">
            </select>
        </div>

        @******* INPUT SUBMIT ********@
        <div>
           
            <button class=" btn btn-success" type="submit">Aggiorna</button>
        </div>
    </form>

</div>
