@{
    ViewData["Title"] = "Lista Ingredienti";
}

@model List<Ingrediente>


<div>
    <div>
        <a class="btn btn-primary " href="@Url.Action("Create","Ingrediente")">Aggiungi Ingrediente</a>
    </div>

    <div class="d-flex flex-wrap">
        @if (Model.Count() > 0)
        {
            @foreach(Ingrediente ing in Model)
            {
            
                <a class="btn card border-primary col-3 m-4 " href="@Url.Action("Details","Ingrediente", new {id = @ing.Id})"> 
                    <div class="text-center"> 
                        <span class="card-title">@ing.Name</span>
                    </div>
                        
                </a>
                
            }
        }
        else
        {
            <div class="col-12 text-center">
                <strong class="text-center ">Non ci sono pizze da visualizzare</strong>        
            </div>
        }
    </div>
</div>

